<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GIC.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="0">
            <SearchBar x:Name="ProductSearchBar" TextChanged="OnTextChanged"/>
            <Label x:Name="DescriptionHeaderLabel" FontAttributes="Bold" IsVisible="False" Text="Åtgärd"/>
            <Label x:Name="SearchResults"  />
            <Label x:Name="SuggestionLabel" TextColor="Blue">
            </Label>
            <Button x:Name="SearchButton" Text="Search" Clicked="OnSearchButtonClicked" />

            <CollectionView x:Name="SuggestionResults" SelectionMode="Single" SelectionChanged="OnSelectionChanged" IsVisible="False">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Label Text="{Binding .}" />
                        <!-- Assuming you're binding to a string -->
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
